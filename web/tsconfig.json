{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": [
        "common/*"
      ],
      "@components/*": [
        "common/components/*"
      ],
      "@utils/*": [
        "common/utils/*"
      ],
      "@sanity/*": [
        "common/utils/sanity/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "environment.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}